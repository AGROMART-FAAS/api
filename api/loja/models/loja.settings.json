{
  "kind": "collectionType",
  "collectionName": "lojas",
  "info": {
    "name": "loja",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "descricao": {
      "type": "string"
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "tipos_de_entrega": {
      "type": "enumeration",
      "enum": [
        "Entregar",
        "Receber"
      ],
      "required": true
    },
    "contato": {
      "type": "string"
    },
    "cnpj": {
      "type": "string",
      "required": true,
      "default": "cnpj"
    },
    "usuario": {
      "via": "loja",
      "plugin": "users-permissions",
      "model": "user"
    },
    "extratos": {
      "via": "loja",
      "collection": "extrato"
    },
    "endereco": {
      "model": "endereco"
    },
    "produtos_avulsos": {
      "via": "loja",
      "collection": "produtos-avulsos"
    },
    "planos": {
      "via": "loja",
      "collection": "plano"
    },
    "cestas": {
      "via": "loja",
      "collection": "cesta"
    },
    "notificacoes": {
      "via": "loja_id",
      "collection": "notificacoes"
    }
  }
}
