{
  "kind": "collectionType",
  "collectionName": "lojas",
  "info": {
    "name": "loja",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "descricao": {
      "type": "string"
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "tipos_de_entrega": {
      "type": "enumeration",
      "enum": [
        "encomenda"
      ],
      "required": true
    },
    "contato": {
      "type": "string"
    },
    "cnpj": {
      "type": "string",
      "required": true,
      "default": "cnpj"
    },
    "usuario": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "loja"
    },
    "extratos": {
      "collection": "extrato",
      "via": "loja"
    },
    "enderecos": {
      "collection": "endereco",
      "via": "loja"
    },
    "produtos_avulsos": {
      "collection": "produtos-avulsos",
      "via": "loja"
    },
    "planos": {
      "collection": "plano",
      "via": "loja"
    },
    "cestas": {
      "collection": "cesta",
      "via": "loja"
    }
  }
}
